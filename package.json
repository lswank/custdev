{
  "name": "custdev-wiki",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "setup": "tsx scripts/setup.ts",
    "scaffold:product": "tsx scripts/scaffold-product.ts",
    "scaffold:term": "tsx scripts/scaffold-term.ts",
    "validate": "tsx scripts/validate.ts",
    "auth:hash-password": "tsx scripts/hash-password.ts",
    "auth:add-user": "tsx scripts/add-user.ts",
    "governance:report": "tsx scripts/governance-report.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test": "npm run test:unit && npm run test:e2e",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:test": "docker compose --profile test up --abort-on-container-exit --exit-code-from playwright",
    "docker:logs": "docker compose logs -f wiki",
    "docker:shell": "docker compose exec wiki sh",
    "docker:reset": "docker compose down -v && docker compose up -d --build"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.2",
    "@astrojs/react": "^4.4.2",
    "astro": "^5.17.1",
    "bcryptjs": "^3.0.3",
    "jose": "^6.1.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "gray-matter": "^4.0.3",
    "happy-dom": "^20.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
