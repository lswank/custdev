---
import StatusBadge from './StatusBadge.astro';

interface Props {
  name: string;
  slug: string;
  language: string;
  description: string;
  status: string;
}

const { name, slug, language, description, status } = Astro.props;
---

<a href={`/repositories/${slug}`} class="repo-card">
  <h3 class="repo-name">{name}</h3>
  <div class="repo-meta">
    <StatusBadge status={language} />
    <StatusBadge status={status} />
  </div>
  <p class="repo-description">{description}</p>
</a>

<style>
  .repo-card {
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .repo-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: 0 2px 8px var(--color-shadow, rgba(0, 0, 0, 0.08));
  }

  .repo-name {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
    color: var(--color-text);
  }

  .repo-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .repo-description {
    margin: 0.75rem 0 0;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
  }
</style>
