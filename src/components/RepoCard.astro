---
import StatusBadge from './StatusBadge.astro';

interface Props {
  name: string;
  slug: string;
  language: string;
  description: string;
  status: string;
  tech_stack?: string[];
}

const { name, slug, language, description, status, tech_stack } = Astro.props;

// Language color dots
const langColors: Record<string, string> = {
  python: '#3572A5',
  javascript: '#f1e05a',
  typescript: '#3178c6',
  go: '#00ADD8',
  rust: '#dea584',
  java: '#b07219',
  swift: '#F05138',
  kotlin: '#A97BFF',
};
const langColor = langColors[language?.toLowerCase()] || 'var(--color-text-muted)';
---

<a href={`/repositories/${slug}`} class="repo-card">
  <h3 class="repo-name">{name}</h3>
  <div class="repo-meta">
    <span class="repo-lang" style={`--lang-color: ${langColor}`}>
      <span class="lang-dot" aria-hidden="true"></span>
      {language}
    </span>
    <StatusBadge status={status} />
  </div>
  <p class="repo-description">{description}</p>
  {tech_stack && tech_stack.length > 0 && (
    <div class="repo-stack">
      {tech_stack.slice(0, 5).map((tech) => (
        <span class="stack-pill">{tech}</span>
      ))}
    </div>
  )}
</a>

<style>
  .repo-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .repo-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: var(--shadow-md);
  }

  .repo-name {
    margin: 0 0 var(--space-2) 0;
    font-size: var(--text-lg, 1.1rem);
    line-height: 1.3;
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: var(--text-base, 1rem);
  }

  .repo-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .repo-lang {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-sm, 0.875rem);
    color: var(--color-text-muted);
  }

  .lang-dot {
    width: 10px;
    height: 10px;
    border-radius: var(--radius-full);
    background: var(--lang-color);
  }

  .repo-description {
    margin: var(--space-3) 0 0;
    font-size: var(--text-sm, 0.875rem);
    color: var(--color-text-muted);
    line-height: 1.5;
  }

  .repo-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin-top: var(--space-3);
  }

  .stack-pill {
    font-size: var(--text-xs, 0.75rem);
    padding: 0.15em 0.5em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }
</style>
