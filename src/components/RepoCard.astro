---
import StatusBadge from './StatusBadge.astro';
import ReviewBadge from './ReviewBadge.astro';

interface Props {
  name: string;
  slug: string;
  language: string;
  description: string;
  status: string;
  tech_stack?: string[];
  reviewed?: boolean;
}

const { name, slug, language, description, status, tech_stack, reviewed = false } = Astro.props;

// Language color dots
const langColors: Record<string, string> = {
  python: '#3572A5',
  javascript: '#f1e05a',
  typescript: '#3178c6',
  go: '#00ADD8',
  rust: '#dea584',
  java: '#b07219',
  swift: '#F05138',
  kotlin: '#A97BFF',
};
const langColor = langColors[language?.toLowerCase()] || 'var(--color-text-muted)';
---

<a href={`/repositories/${slug}`} class="repo-card">
  <h3 class="repo-name">{name}</h3>
  <div class="repo-meta">
    <span class="repo-lang" style={`--lang-color: ${langColor}`}>
      <span class="lang-dot" aria-hidden="true"></span>
      {language}
    </span>
    <StatusBadge status={status} />
    <ReviewBadge reviewed={reviewed} />
  </div>
  <p class="repo-description">{description}</p>
  {tech_stack && tech_stack.length > 0 && (
    <div class="repo-stack">
      {tech_stack.slice(0, 5).map((tech) => (
        <span class="stack-pill">{tech}</span>
      ))}
    </div>
  )}
</a>

<style>
  .repo-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
  }

  .repo-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: var(--shadow-md);
    background: linear-gradient(to bottom, var(--color-bg) 0%, color-mix(in srgb, var(--color-bg-secondary) 50%, transparent) 100%);
    transform: translateY(-2px);
  }

  .repo-name {
    margin: 0 0 var(--space-3) 0;
    font-size: var(--text-base);
    line-height: 1.3;
    color: var(--color-text);
    font-family: var(--font-mono);
    font-weight: 600;
  }

  .repo-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-2);
  }

  .repo-lang {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text);
    font-weight: 600;
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border);
  }

  .lang-dot {
    width: 12px;
    height: 12px;
    border-radius: var(--radius-full);
    background: var(--lang-color);
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--lang-color) 20%, transparent);
  }

  .repo-description {
    margin: var(--space-3) 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .repo-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
  }

  .stack-pill {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
    font-weight: 500;
    transition: all 0.15s ease;
  }

  .repo-card:hover .stack-pill {
    border-color: color-mix(in srgb, var(--color-link) 30%, var(--color-border));
  }
</style>
