---
import StatusBadge from './StatusBadge.astro';

interface Props {
  title: string;
  number: number;
  status: string;
  date: Date;
}

const { title, number, status, date } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<a href={`/adrs/${number}`} class="adr-card">
  <h3 class="adr-title">ADR-{number}: {title}</h3>
  <div class="adr-meta">
    <StatusBadge status={status} />
    <span class="adr-date">{formattedDate}</span>
  </div>
</a>

<style>
  .adr-card {
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .adr-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: 0 2px 8px var(--color-shadow, rgba(0, 0, 0, 0.08));
  }

  .adr-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
    color: var(--color-text);
  }

  .adr-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .adr-date {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
</style>
