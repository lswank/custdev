---
import PhaseIndicator from './PhaseIndicator.astro';
import StatusBadge from './StatusBadge.astro';

interface Props {
  name: string;
  slug: string;
  phase: string;
  status: string;
  description: string;
}

const { name, slug, phase, status, description } = Astro.props;

const phaseColors: Record<string, string> = {
  discovery: 'var(--color-discovery)',
  validation: 'var(--color-validation)',
  creation: 'var(--color-creation)',
  building: 'var(--color-building)',
};
const phaseColor = phaseColors[phase] || 'var(--color-border)';
---

<a href={`/products/${slug}`} class="product-card" style={`--product-phase-color: ${phaseColor}`}>
  <h3 class="product-name">{name}</h3>
  <div class="product-meta">
    <PhaseIndicator phase={phase as any} size="small" />
    <StatusBadge status={status} />
  </div>
  {description && (
    <p class="product-description">{description}</p>
  )}
</a>

<style>
  .product-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-top: 3px solid var(--product-phase-color);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
  }

  .product-card:hover {
    text-decoration: none;
    border-color: var(--product-phase-color);
    box-shadow: var(--shadow-md);
    background: linear-gradient(to bottom, color-mix(in srgb, var(--product-phase-color) 3%, var(--color-bg)) 0%, var(--color-bg) 100%);
  }

  .product-name {
    margin: 0 0 var(--space-3) 0;
    font-size: var(--text-lg);
    line-height: 1.3;
    color: var(--color-text);
    font-weight: 600;
  }

  .product-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-2);
  }

  .product-description {
    margin: var(--space-3) 0 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
  }
</style>
