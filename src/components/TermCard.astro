---
import PhaseIndicator from './PhaseIndicator.astro';
import StatusBadge from './StatusBadge.astro';

interface Props {
  name: string;
  slug: string;
  phase: string;
  status: string;
  aliases?: string[];
}

const { name, slug, phase, status, aliases } = Astro.props;

const phaseColors: Record<string, string> = {
  discovery: 'var(--color-discovery)',
  validation: 'var(--color-validation)',
  creation: 'var(--color-creation)',
  building: 'var(--color-building)',
};
const borderColor = phaseColors[phase] || 'var(--color-border)';
---

<a href={`/terms/${slug}`} class="term-card" style={`--term-phase-color: ${borderColor}`}>
  <h3 class="term-name">{name}</h3>
  <div class="term-meta">
    <PhaseIndicator phase={phase as any} size="small" />
    <StatusBadge status={status} />
  </div>
  {aliases && aliases.length > 0 && (
    <p class="term-aliases">
      <span class="aliases-label">Also:</span> {aliases.join(', ')}
    </p>
  )}
</a>

<style>
  .term-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-left: 4px solid var(--term-phase-color);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .term-card:hover {
    text-decoration: none;
    box-shadow: var(--shadow-md);
  }

  .term-name {
    margin: 0 0 var(--space-2) 0;
    font-size: var(--text-lg, 1.1rem);
    line-height: 1.3;
    color: var(--color-text);
  }

  .term-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .term-aliases {
    margin: var(--space-2) 0 0;
    font-size: var(--text-xs, 0.8rem);
    color: var(--color-text-muted);
  }

  .aliases-label {
    font-weight: 600;
  }
</style>
