---
import StatusBadge from './StatusBadge.astro';

interface Props {
  title: string;
  slug: string;
  category: string;
  status: string;
  owner?: string;
}

const { title, slug, category, status, owner } = Astro.props;

// Category icons
const categoryIcons: Record<string, string> = {
  deployment: '<path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>',
  onboarding: '<path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" fill="none" stroke="currentColor" stroke-width="2"/><circle cx="8.5" cy="7" r="4" fill="none" stroke="currentColor" stroke-width="2"/><path d="M20 8v6M23 11h-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>',
  review: '<circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/><path d="M12 16v-4M12 8h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>',
  incident: '<path d="M10.29 3.86L1.82 18a2 2 0 001.71 3h16.94a2 2 0 001.71-3L13.71 3.86a2 2 0 00-3.42 0zM12 9v4M12 17h.01" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>',
  operations: '<circle cx="12" cy="12" r="3" fill="none" stroke="currentColor" stroke-width="2"/><path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 01-2.83 2.83l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-4 0v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83-2.83l.06-.06A1.65 1.65 0 004.68 15a1.65 1.65 0 00-1.51-1H3a2 2 0 010-4h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 012.83-2.83l.06.06A1.65 1.65 0 009 4.68a1.65 1.65 0 001-1.51V3a2 2 0 014 0v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 2.83l-.06.06A1.65 1.65 0 0019.4 9a1.65 1.65 0 001.51 1H21a2 2 0 010 4h-.09a1.65 1.65 0 00-1.51 1z" fill="none" stroke="currentColor" stroke-width="2"/>',
};
const icon = categoryIcons[category] || categoryIcons.operations;
---

<a href={`/processes/${slug}`} class="process-card">
  <div class="process-header">
    <div class="process-icon" aria-hidden="true">
      <svg width="18" height="18" viewBox="0 0 24 24" set:html={icon} />
    </div>
    <h3 class="process-title">{title}</h3>
  </div>
  <div class="process-meta">
    <StatusBadge status={category} />
    <StatusBadge status={status} />
  </div>
  {owner && (
    <p class="process-owner">
      <span class="owner-label">Owner:</span> {owner}
    </p>
  )}
</a>

<style>
  .process-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s ease;
  }

  .process-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: var(--shadow-md);
  }

  .process-card:hover .process-icon {
    transform: scale(1.1);
    color: var(--color-link-hover);
  }

  .process-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .process-icon {
    flex-shrink: 0;
    color: var(--color-link);
    margin-top: 2px;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--color-link) 10%, transparent);
    border-radius: var(--radius-sm);
    padding: var(--space-1);
    transition: all 0.2s ease;
  }

  .process-title {
    margin: 0;
    font-size: var(--text-base);
    line-height: 1.4;
    color: var(--color-text);
    font-weight: 600;
  }

  .process-meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
    margin-bottom: var(--space-2);
  }

  .process-owner {
    margin: var(--space-3) 0 0;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border);
  }

  .owner-label {
    font-weight: 700;
    color: var(--color-text);
  }
</style>
