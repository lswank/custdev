---
import StatusBadge from './StatusBadge.astro';

interface Props {
  title: string;
  slug: string;
  category: string;
  status: string;
  owner?: string;
}

const { title, slug, category, status, owner } = Astro.props;
---

<a href={`/processes/${slug}`} class="process-card">
  <h3 class="process-title">{title}</h3>
  <div class="process-meta">
    <StatusBadge status={category} />
    <StatusBadge status={status} />
  </div>
  {owner && (
    <p class="process-owner">
      <span class="owner-label">Owner:</span> {owner}
    </p>
  )}
</a>

<style>
  .process-card {
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .process-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: 0 2px 8px var(--color-shadow, rgba(0, 0, 0, 0.08));
  }

  .process-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    line-height: 1.3;
    color: var(--color-text);
  }

  .process-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .process-owner {
    margin: 0.5rem 0 0;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .owner-label {
    font-weight: 600;
  }
</style>
