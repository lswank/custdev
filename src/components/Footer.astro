---
import { getSiteConfig } from '../lib/config';

const config = await getSiteConfig();
const currentYear = new Date().getFullYear();
const companyName = config.company?.name && config.company.name !== 'Your Company'
  ? config.company.name
  : null;
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-left">
      <p class="footer-text">
        Built with the <a href="/framework">Customer Development framework</a>
      </p>
      {companyName && (
        <p class="footer-company">&copy; {currentYear} {companyName}</p>
      )}
      {!companyName && (
        <p class="footer-company">&copy; {currentYear}</p>
      )}
    </div>
    <nav class="footer-links" aria-label="Footer navigation">
      <a href="/framework">Framework</a>
      <a href="/adrs">ADRs</a>
      <a href="/resources">Resources</a>
    </nav>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    background: var(--color-bg-secondary);
    padding: var(--space-6) var(--space-4);
  }

  .footer-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .footer-text {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .footer-company {
    margin: 0;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  .footer-links {
    display: flex;
    gap: var(--space-4);
  }

  .footer-links a {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .footer-links a:hover {
    color: var(--color-link);
  }
</style>
