---
import StatusBadge from './StatusBadge.astro';

interface Props {
  name: string;
  slug: string;
  status?: string;
  jurisdiction?: string;
  relationship?: string;
  entity_type?: string;
  parent?: string;
}

const { name, slug, status, jurisdiction, relationship, entity_type, parent } = Astro.props;
---

<a href={`/entities/${slug}`} class="entity-card">
  <div class="entity-header">
    {parent && (
      <span class="entity-connector" aria-hidden="true">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2v8M6 14h12M6 14v6M18 14v6" stroke-linecap="round"/>
        </svg>
      </span>
    )}
    <h3 class="entity-name">{name}</h3>
  </div>
  <div class="entity-meta">
    {status && <StatusBadge status={status} />}
    {relationship && <span class="entity-pill">{relationship.replace(/-/g, ' ')}</span>}
    {jurisdiction && <span class="entity-pill">{jurisdiction}</span>}
  </div>
  {entity_type && (
    <p class="entity-type">{entity_type.replace(/-/g, ' ')}</p>
  )}
</a>

<style>
  .entity-card {
    display: block;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    text-decoration: none;
    color: var(--color-text);
    transition: box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .entity-card:hover {
    text-decoration: none;
    border-color: var(--color-link);
    box-shadow: var(--shadow-md);
  }

  .entity-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .entity-connector {
    color: var(--color-text-muted);
    flex-shrink: 0;
  }

  .entity-name {
    margin: 0;
    font-size: var(--text-lg, 1.1rem);
    line-height: 1.3;
  }

  .entity-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    align-items: center;
  }

  .entity-pill {
    font-size: var(--text-xs, 0.7rem);
    padding: 0.2em 0.6em;
    border-radius: var(--radius-full);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text-muted);
    text-transform: capitalize;
    white-space: nowrap;
  }

  .entity-type {
    margin: var(--space-3) 0 0;
    font-size: var(--text-sm, 0.85rem);
    color: var(--color-text-muted);
    text-transform: capitalize;
  }
</style>
