---
interface Props {
  text: string;
  position?: 'top' | 'bottom';
}
const { text, position = 'bottom' } = Astro.props;
---
<span class="tooltip-wrapper">
  <slot />
  <span class="tooltip-text" data-position={position}>{text}</span>
</span>

<style>
  .tooltip-wrapper {
    position: relative;
    display: inline-flex;
    align-items: center;
    cursor: help;
  }
  .tooltip-text {
    visibility: hidden;
    opacity: 0;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    padding: var(--space-2) var(--space-3);
    background: var(--color-text);
    color: var(--color-bg);
    font-size: var(--text-xs);
    border-radius: var(--radius-sm);
    white-space: nowrap;
    max-width: 250px;
    white-space: normal;
    z-index: 100;
    pointer-events: none;
    transition: opacity var(--transition-fast);
    line-height: 1.4;
  }
  .tooltip-text[data-position="bottom"] {
    top: calc(100% + var(--space-1));
  }
  .tooltip-text[data-position="top"] {
    bottom: calc(100% + var(--space-1));
  }
  .tooltip-wrapper:hover .tooltip-text,
  .tooltip-wrapper:focus-within .tooltip-text {
    visibility: visible;
    opacity: 1;
  }
</style>
