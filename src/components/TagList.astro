---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{tags.length > 0 && (
  <ul class="tag-list">
    {tags.map((tag) => (
      <li class="tag">{tag}</li>
    ))}
  </ul>
)}

<style>
  .tag-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2em 0.6em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    color: var(--color-text-muted);
    line-height: 1;
    white-space: nowrap;
  }
</style>
