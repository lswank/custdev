---
import ContentLayout from '../../layouts/ContentLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import ReviewBanner from '../../components/ReviewBanner.astro';
import { getCollection } from 'astro:content';
import { getReviewMeta } from '../../lib/review';

const { slug } = Astro.params;

const people = await getCollection('people');
const person = people.find((p) => p.id.replace(/\.md$/, '') === slug);

if (!person) {
  return Astro.redirect('/404');
}

const entities = await getCollection('entities');
const companyEntity = person.data.company
  ? entities.find((entity) => entity.id.replace(/\.md$/, '') === person.data.company)
  : undefined;
const reportsTo = person.data.reports_to
  ? people.find((p) => p.id.replace(/\.md$/, '') === person.data.reports_to)
  : undefined;

// Get owned terms
const terms = await getCollection('terms');
const ownedTerms = terms.filter((t) => t.data.owner === person.data.name || t.data.owner === slug);

// Get owned processes
const processes = await getCollection('processes');
const ownedProcesses = processes.filter((p) => p.data.owner === person.data.name || p.data.owner === slug);

// Get contributed repos
const repositories = await getCollection('repositories');
const contributedRepos = repositories.filter((r) =>
  r.data.contributors.some((c) => c === person.data.name || c === person.data.github || c === slug)
);

const { Content } = await person.render();

// Create initials for avatar
const initials = person.data.name
  .split(' ')
  .map((part) => part[0])
  .join('')
  .toUpperCase()
  .slice(0, 2);

const formatRange = (start?: Date, end?: Date) => {
  if (start && end) return `${start.toLocaleDateString()} — ${end.toLocaleDateString()}`;
  if (start) return `${start.toLocaleDateString()} — Present`;
  if (end) return end.toLocaleDateString();
  return '';
};

const linkedinUrl = person.data.linkedin
  ? person.data.linkedin.startsWith('http')
    ? person.data.linkedin
    : `https://linkedin.com/in/${person.data.linkedin}`
  : undefined;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Team', href: '/people' },
  { label: person.data.name },
];

const reviewMeta = getReviewMeta(person.data);
---

<ContentLayout
  title={`${person.data.name} — CustDev Wiki`}
  breadcrumbs={breadcrumbs}
>
  <div class="person-header">
    <div class="profile-card">
      <div class="profile-avatar">{initials}</div>
      <div class="profile-info">
        <h1>{person.data.name}</h1>
        <div class="meta">
          <StatusBadge status={person.data.status} />
          <span class="role">{person.data.role}</span>
        </div>
        {person.data.title && (
          <p class="person-title">{person.data.title}</p>
        )}
        {companyEntity && (
          <p class="company-link">
            <a href={`/entities/${companyEntity.id.replace(/\.md$/, '')}`}>{companyEntity.data.name}</a>
          </p>
        )}
      </div>
    </div>
  </div>

  <ReviewBanner
    reviewed={reviewMeta.reviewed}
    reviewedAt={reviewMeta.reviewedAt}
    reviewedBy={reviewMeta.reviewedBy}
  />

  {person.data.expertise.length > 0 && (
    <section class="expertise-section">
      <h2>Expertise</h2>
      <div class="expertise-cloud">
        {person.data.expertise.map((skill) => (
          <span class="expertise-pill">{skill}</span>
        ))}
      </div>
    </section>
  )}

  {ownedTerms.length > 0 && (
    <section class="owned-terms-section">
      <h2>Owned Terms ({ownedTerms.length})</h2>
      <ul class="linked-list">
        {ownedTerms.map((term) => (
          <li>
            <a href={`/terms/${term.id.replace(/\.md$/, '')}`}>{term.data.name}</a>
          </li>
        ))}
      </ul>
    </section>
  )}

  {ownedProcesses.length > 0 && (
    <section class="owned-processes-section">
      <h2>Owned Processes ({ownedProcesses.length})</h2>
      <ul class="linked-list">
        {ownedProcesses.map((proc) => (
          <li>
            <a href={`/processes/${proc.id.replace(/\.md$/, '')}`}>{proc.data.title}</a>
          </li>
        ))}
      </ul>
    </section>
  )}

  {contributedRepos.length > 0 && (
    <section class="repos-section">
      <h2>Contributed Repositories ({contributedRepos.length})</h2>
      <ul class="linked-list">
        {contributedRepos.map((repo) => (
          <li>
            <a href={`/repositories/${repo.id.replace(/\.md$/, '')}`}>{repo.data.name}</a>
            <span class="repo-lang">{repo.data.language}</span>
          </li>
        ))}
      </ul>
    </section>
  )}

  {person.data.previous_roles.length > 0 && (
    <section class="history-section">
      <h2>Previous Roles</h2>
      <ul class="history-list">
        {person.data.previous_roles.map((role) => (
          <li>
            <div class="history-header">
              <strong>{role.title}</strong>
              {role.company && <span class="history-company">{role.company}</span>}
            </div>
            {formatRange(role.start_date, role.end_date) && (
              <div class="history-dates">{formatRange(role.start_date, role.end_date)}</div>
            )}
            {role.summary && <p class="history-summary">{role.summary}</p>}
          </li>
        ))}
      </ul>
    </section>
  )}

  {person.data.education.length > 0 && (
    <section class="history-section">
      <h2>Education</h2>
      <ul class="history-list">
        {person.data.education.map((edu) => (
          <li>
            <div class="history-header">
              <strong>{edu.institution}</strong>
              {edu.degree && (
                <span class="history-company">
                  {edu.degree}{edu.field ? `, ${edu.field}` : ''}
                </span>
              )}
            </div>
            {formatRange(edu.start_date, edu.end_date) && (
              <div class="history-dates">{formatRange(edu.start_date, edu.end_date)}</div>
            )}
            {edu.notes && <p class="history-summary">{edu.notes}</p>}
          </li>
        ))}
      </ul>
    </section>
  )}

  <article class="person-content" data-pagefind-body>
    <Content />
  </article>

  <Fragment slot="sidebar">
    <div class="sidebar-section">
      <h3>Details</h3>
      <dl>
        <dt>Role</dt>
        <dd>{person.data.role}</dd>
        {person.data.title && (
          <>
            <dt>Title</dt>
            <dd>{person.data.title}</dd>
          </>
        )}
        <dt>Status</dt>
        <dd><StatusBadge status={person.data.status} /></dd>
        {person.data.company && (
          <>
            <dt>Company</dt>
            <dd>
              <a href={`/entities/${person.data.company}`}>
                {companyEntity ? companyEntity.data.name : person.data.company}
              </a>
            </dd>
          </>
        )}
        {person.data.department && (
          <>
            <dt>Department</dt>
            <dd>{person.data.department}</dd>
          </>
        )}
        {person.data.reports_to && (
          <>
            <dt>Reports To</dt>
            <dd>
              <a href={`/people/${person.data.reports_to}`}>
                {reportsTo ? reportsTo.data.name : person.data.reports_to}
              </a>
            </dd>
          </>
        )}
        {person.data.start_date && (
          <>
            <dt>Start Date</dt>
            <dd>{person.data.start_date.toLocaleDateString()}</dd>
          </>
        )}
        {person.data.end_date && (
          <>
            <dt>End Date</dt>
            <dd>{person.data.end_date.toLocaleDateString()}</dd>
          </>
        )}
        {person.data.location && (
          <>
            <dt>Location</dt>
            <dd>{person.data.location}</dd>
          </>
        )}
        {linkedinUrl && (
          <>
            <dt>LinkedIn</dt>
            <dd>
              <a href={linkedinUrl} target="_blank" rel="noopener noreferrer">
                {person.data.linkedin}
              </a>
            </dd>
          </>
        )}
        {person.data.timezone && (
          <>
            <dt>Timezone</dt>
            <dd>{person.data.timezone}</dd>
          </>
        )}
        {person.data.github && (
          <>
            <dt>GitHub</dt>
            <dd>
              <a href={`https://github.com/${person.data.github}`} target="_blank" rel="noopener noreferrer">
                @{person.data.github}
              </a>
            </dd>
          </>
        )}
      </dl>
    </div>

    {(person.data.disc_profile || person.data.mbti) && (
      <div class="sidebar-section personality-section">
        <h3>Personality</h3>
        <dl>
          {person.data.disc_profile && (
            <>
              <dt>DiSC</dt>
              <dd>{person.data.disc_profile}</dd>
            </>
          )}
          {person.data.mbti && (
            <>
              <dt>MBTI</dt>
              <dd>{person.data.mbti}</dd>
            </>
          )}
        </dl>
      </div>
    )}
  </Fragment>
</ContentLayout>

<style>
  .person-header {
    margin-bottom: var(--space-8);
  }

  .profile-card {
    display: flex;
    gap: var(--space-6);
    align-items: start;
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .profile-avatar {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, var(--color-discovery), var(--color-validation));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-2xl);
    font-weight: 700;
    flex-shrink: 0;
  }

  .profile-info {
    flex: 1;
  }

  .profile-info h1 {
    margin: 0 0 var(--space-2);
    font-size: var(--text-2xl);
  }

  .meta {
    display: flex;
    gap: var(--space-2);
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .role {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .person-title {
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
    font-size: var(--text-sm);
  }

  .company-link {
    margin: var(--space-2) 0 0;
    font-size: var(--text-sm);
  }

  .expertise-section,
  .owned-terms-section,
  .owned-processes-section,
  .repos-section,
  .history-section {
    margin: var(--space-8) 0;
  }

  .expertise-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .expertise-pill {
    font-size: var(--text-sm);
    padding: 0.4em 0.9em;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text);
    font-weight: 500;
  }

  .linked-list {
    list-style: none;
    margin: var(--space-3) 0 0;
    padding: 0;
    display: grid;
    gap: var(--space-2);
  }

  .linked-list li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
  }

  .repo-lang {
    margin-left: auto;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: 0.2em 0.5em;
    background: var(--color-bg);
    border-radius: var(--radius-sm);
  }

  .history-list {
    list-style: none;
    padding: 0;
    margin: var(--space-3) 0 0;
    display: grid;
    gap: var(--space-3);
  }

  .history-list li {
    padding: var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: var(--color-bg-secondary);
  }

  .history-header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .history-company {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .history-dates {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-1);
  }

  .history-summary {
    margin: var(--space-2) 0 0;
    font-size: var(--text-sm);
  }

  .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: var(--space-4);
    font-size: var(--text-base);
  }

  .personality-section {
    opacity: 0.7;
    font-size: var(--text-sm);
  }

  dl {
    margin: 0;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-3);
  }

  dt:first-child {
    margin-top: 0;
  }

  dd {
    margin: var(--space-1) 0 0 0;
  }
</style>
