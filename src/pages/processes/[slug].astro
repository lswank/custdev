---
import ContentLayout from '../../layouts/ContentLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;

const processes = await getCollection('processes');
const process = processes.find((p) => p.id.replace(/\.md$/, '') === slug);

if (!process) {
  return Astro.redirect('/404');
}

const { Content } = await process.render();

// Get owner from people collection
const people = await getCollection('people');
const owner = process.data.owner
  ? people.find((p) => p.data.name === process.data.owner || p.id.replace(/\.md$/, '') === process.data.owner)
  : undefined;

const categoryLabel = process.data.category.charAt(0).toUpperCase() + process.data.category.slice(1);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Processes', href: '/processes' },
  { label: process.data.title },
];
---

<ContentLayout
  title={`${process.data.title} â€” CustDev Wiki`}
  breadcrumbs={breadcrumbs}
>
  <div class="process-header">
    <h1>{process.data.title}</h1>
    <div class="meta">
      <StatusBadge status={process.data.status} />
      <span class="category">{categoryLabel}</span>
    </div>
  </div>

  {process.data.owner && (
    <section class="owner-section">
      <h2>Process Owner</h2>
      <div class="owner-card">
        {owner
          ? <a href={`/people/${owner.id.replace(/\.md$/, '')}`} class="owner-link">
              <div class="owner-name">{process.data.owner}</div>
              <div class="owner-role">{owner.data.role}</div>
            </a>
          : <div class="owner-name">{process.data.owner}</div>
        }
      </div>
    </section>
  )}

  {process.data.tools.length > 0 && (
    <section class="tools-section">
      <h2>Tools</h2>
      <ul class="tag-list">
        {process.data.tools.map((tool) => (
          <li class="tag-pill">{tool}</li>
        ))}
      </ul>
    </section>
  )}

  <article class="process-content" data-pagefind-body>
    <Content />
  </article>

  <Fragment slot="sidebar">
    <div class="sidebar-section">
      <h3>Details</h3>
      <dl>
        <dt>Category</dt>
        <dd>{categoryLabel}</dd>
        <dt>Status</dt>
        <dd><StatusBadge status={process.data.status} /></dd>
        {process.data.owner && (
          <>
            <dt>Owner</dt>
            <dd>
              {owner
                ? <a href={`/people/${owner.id.replace(/\.md$/, '')}`}>{process.data.owner}</a>
                : process.data.owner
              }
            </dd>
          </>
        )}
        {process.data.last_updated && (
          <>
            <dt>Last Updated</dt>
            <dd>{process.data.last_updated.toLocaleDateString()}</dd>
          </>
        )}
        {process.data.tools.length > 0 && (
          <>
            <dt>Tools</dt>
            <dd>{process.data.tools.join(', ')}</dd>
          </>
        )}
      </dl>
    </div>
  </Fragment>
</ContentLayout>

<style>
  .process-header {
    margin-bottom: var(--space-8);
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .process-header h1 {
    margin: 0 0 var(--space-2);
  }

  .meta {
    display: flex;
    gap: var(--space-2);
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .category {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .owner-section,
  .tools-section {
    margin: var(--space-6) 0;
  }

  .owner-card {
    margin-top: var(--space-3);
  }

  .owner-link {
    display: block;
    padding: var(--space-4);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
    max-width: 300px;
  }

  .owner-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-link);
  }

  .owner-name {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .owner-role {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .tag-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag-pill {
    font-size: var(--text-sm);
    padding: 0.3em 0.7em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: var(--space-4);
    font-size: var(--text-base);
  }

  dl {
    margin: 0;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-3);
  }

  dt:first-child {
    margin-top: 0;
  }

  dd {
    margin: var(--space-1) 0 0 0;
  }
</style>
