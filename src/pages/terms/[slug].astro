---
import ContentLayout from '../../layouts/ContentLayout.astro';
import PhaseIndicator from '../../components/PhaseIndicator.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import ConfidenceBadge from '../../components/ConfidenceBadge.astro';
import TagList from '../../components/TagList.astro';
import ReviewBanner from '../../components/ReviewBanner.astro';
import { getCollection } from 'astro:content';
import { getReviewMeta } from '../../lib/review';

const { slug } = Astro.params;

const terms = await getCollection('terms');
const term = terms.find((t) => t.id.replace(/\.md$/, '') === slug);

if (!term) {
  return Astro.redirect('/404');
}

const { Content } = await term.render();

// Get owner from people collection if exists
const people = await getCollection('people');
const owner = term.data.owner
  ? people.find((p) => p.data.name === term.data.owner || p.id.replace(/\.md$/, '') === term.data.owner)
  : undefined;

// Get definitions for this term
const allDefinitions = await getCollection('definitions');
const definitions = allDefinitions.filter((d) => d.data.term === slug);
const globalDef = definitions.find((d) => d.data.product === 'global');
const productDefs = definitions.filter((d) => d.data.product !== 'global');

// Get version history
const allVersions = await getCollection('versions');
const versions = allVersions
  .filter((v) => v.data.term === slug)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Get related terms
const relatedTerms = terms.filter(
  (t) => t.id.replace(/\.md$/, '') !== slug && term.data.aliases.some((a: string) =>
    t.data.name.toLowerCase().includes(a.toLowerCase())
  )
);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Terms', href: '/terms' },
  { label: term.data.name },
];

const reviewMeta = getReviewMeta(term.data);
---

<ContentLayout
  title={`${term.data.name} â€” CustDev Wiki`}
  breadcrumbs={breadcrumbs}
>
  <div class="term-header">
    <h1>{term.data.name}</h1>
    <div class="meta">
      <PhaseIndicator phase={term.data.custdev_phase} />
      <StatusBadge status={term.data.status} />
    </div>
    {term.data.aliases.length > 0 && (
      <p class="aliases">Also known as: {term.data.aliases.join(', ')}</p>
    )}
  </div>

  <ReviewBanner
    reviewed={reviewMeta.reviewed}
    reviewedAt={reviewMeta.reviewedAt}
    reviewedBy={reviewMeta.reviewedBy}
  />

  <article class="term-content" data-pagefind-body>
    <Content />
  </article>

  {globalDef && (
    <section class="definition-section">
      <h2>Global Definition</h2>
      <div class="definition-card global">
        <div class="def-meta">
          <ConfidenceBadge level={globalDef.data.confidence} />
          <span class="version">v{globalDef.data.version}</span>
          {globalDef.data.owner && (
            <span class="owner">
              Owner: {
                people.find((p) => p.data.name === globalDef.data.owner || p.id.replace(/\.md$/, '') === globalDef.data.owner)
                  ? <a href={`/people/${people.find((p) => p.data.name === globalDef.data.owner || p.id.replace(/\.md$/, '') === globalDef.data.owner)!.id.replace(/\.md$/, '')}`}>{globalDef.data.owner}</a>
                  : globalDef.data.owner
              }
            </span>
          )}
        </div>
        {await globalDef.render().then(({ Content: DefContent }) => <DefContent />)}
      </div>
    </section>
  )}

  {productDefs.length > 0 && (
    <section class="definition-section">
      <h2>Product-Specific Definitions</h2>
      {productDefs.map(async (def) => {
        const { Content: DefContent } = await def.render();
        return (
          <div class="definition-card override">
            <div class="def-header">
              <h3>{def.data.product}</h3>
              <span class="override-badge">Overrides global</span>
            </div>
            <div class="def-meta">
              <ConfidenceBadge level={def.data.confidence} />
              <span class="version">v{def.data.version}</span>
            </div>
            {def.data.override_reason && (
              <p class="override-reason">Override reason: {def.data.override_reason}</p>
            )}
            <DefContent />
          </div>
        );
      })}
    </section>
  )}

  {relatedTerms.length > 0 && (
    <section class="related-terms-section">
      <h2>Related Terms</h2>
      <div class="related-terms-list">
        {relatedTerms.map((related) => (
          <a href={`/terms/${related.id.replace(/\.md$/, '')}`} class="related-term-pill">
            {related.data.name}
          </a>
        ))}
      </div>
    </section>
  )}

  {versions.length > 0 && (
    <section class="version-history">
      <details>
        <summary>Version History ({versions.length} {versions.length === 1 ? 'version' : 'versions'})</summary>
        <div class="timeline">
          {versions.map(async (v) => {
            const { Content: VersionContent } = await v.render();
            const versionAuthor = people.find((p) => p.data.name === v.data.author || p.id.replace(/\.md$/, '') === v.data.author);
            return (
              <div class="timeline-entry" data-phase={v.data.phase || term.data.custdev_phase}>
                <div class="timeline-header">
                  <strong>v{v.data.version}</strong>
                  <time>{v.data.date.toLocaleDateString()}</time>
                  <span class="author">
                    {versionAuthor
                      ? <a href={`/people/${versionAuthor.id.replace(/\.md$/, '')}`}>{v.data.author}</a>
                      : v.data.author
                    }
                  </span>
                </div>
                <p class="change-summary">{v.data.change_summary}</p>
                <p class="trigger"><em>Trigger: {v.data.custdev_trigger}</em></p>
                <VersionContent />
              </div>
            );
          })}
        </div>
      </details>
    </section>
  )}

  <Fragment slot="sidebar">
    <div class="sidebar-section">
      <h3>Details</h3>
      <dl>
        <dt>Owner</dt>
        <dd>
          {owner
            ? <a href={`/people/${owner.id.replace(/\.md$/, '')}`}>{term.data.owner}</a>
            : term.data.owner
          }
        </dd>
        <dt>Created</dt>
        <dd>{term.data.created.toLocaleDateString()}</dd>
        <dt>Phase</dt>
        <dd><PhaseIndicator phase={term.data.custdev_phase} size="small" /></dd>
        <dt>Definitions</dt>
        <dd>{definitions.length} ({productDefs.length} product-specific)</dd>
      </dl>
    </div>
  </Fragment>
</ContentLayout>

<style>
  .term-header {
    margin-bottom: var(--space-8);
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .term-header h1 {
    margin: 0 0 var(--space-2);
  }

  .meta {
    display: flex;
    gap: var(--space-2);
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .aliases {
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
  }

  .definition-section {
    margin: var(--space-8) 0;
  }

  .definition-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-6);
    margin-bottom: var(--space-4);
    box-shadow: var(--shadow-sm);
  }

  .definition-card.global {
    border-left: 4px solid var(--color-discovery);
  }

  .definition-card.override {
    border-left: 4px solid var(--color-validation);
  }

  .def-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .def-header h3 {
    margin: 0;
    text-transform: capitalize;
  }

  .override-badge {
    font-size: var(--text-xs);
    background: var(--color-validation);
    color: white;
    padding: 0.15em 0.5em;
    border-radius: var(--radius-sm);
  }

  .def-meta {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    margin-bottom: var(--space-4);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .override-reason {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: var(--space-4);
  }

  .related-terms-section {
    margin-top: var(--space-8);
  }

  .related-terms-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }

  .related-term-pill {
    display: inline-block;
    font-size: var(--text-sm);
    padding: 0.3em 0.8em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-link);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .related-term-pill:hover {
    background: var(--color-link);
    color: white;
    border-color: var(--color-link);
  }

  .version-history {
    margin-top: var(--space-8);
  }

  .version-history details {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .version-history summary {
    font-size: var(--text-xl);
    font-weight: 700;
    padding: var(--space-4) var(--space-6);
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-text);
    background: var(--color-bg-secondary);
    user-select: none;
  }

  .version-history summary::-webkit-details-marker {
    display: none;
  }

  .version-history summary::before {
    content: '\25B6';
    font-size: var(--text-xs);
    transition: transform 0.2s ease;
    color: var(--color-text-muted);
  }

  .version-history details[open] > summary::before {
    transform: rotate(90deg);
  }

  .version-history summary:hover {
    background: var(--color-bg);
  }

  .version-history details[open] > summary {
    border-bottom: 1px solid var(--color-border);
  }

  .version-history .timeline {
    padding: var(--space-6);
  }

  .timeline-entry {
    border-left: 2px solid var(--color-border);
    padding-left: var(--space-6);
    margin-bottom: var(--space-6);
    position: relative;
  }

  .timeline-entry::before {
    content: '';
    width: 10px;
    height: 10px;
    background: var(--color-link);
    border-radius: 50%;
    position: absolute;
    left: -6px;
    top: 0.4rem;
  }

  .timeline-entry[data-phase="discovery"]::before {
    background: var(--color-discovery);
  }

  .timeline-entry[data-phase="validation"]::before {
    background: var(--color-validation);
  }

  .timeline-entry[data-phase="creation"]::before {
    background: var(--color-creation);
  }

  .timeline-entry[data-phase="building"]::before {
    background: var(--color-building);
  }

  .timeline-header {
    display: flex;
    gap: var(--space-4);
    align-items: baseline;
    font-size: var(--text-sm);
  }

  .timeline-header time,
  .author {
    color: var(--color-text-muted);
  }

  .change-summary {
    margin: var(--space-2) 0 var(--space-1);
  }

  .trigger {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: var(--space-4);
    font-size: var(--text-base);
  }

  dl {
    margin: 0;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-3);
  }

  dt:first-child {
    margin-top: 0;
  }

  dd {
    margin: var(--space-1) 0 0 0;
  }
</style>
