---
import ContentLayout from '../../layouts/ContentLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import { getCollection } from 'astro:content';

const { number } = Astro.params;

const adrs = await getCollection('adrs');
const adr = adrs.find((a) => a.data.number === Number(number));

if (!adr) {
  return Astro.redirect('/404');
}

const { Content } = await adr.render();

// Get deciders as people
const people = await getCollection('people');
const deciderPeople = adr.data.deciders
  .map((decider) => people.find((p) => p.data.name === decider || p.id.replace(/\.md$/, '') === decider))
  .filter(Boolean);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'ADRs', href: '/adrs' },
  { label: `ADR-${adr.data.number}` },
];
---

<ContentLayout
  title={`ADR-${adr.data.number}: ${adr.data.title} â€” CustDev Wiki`}
  breadcrumbs={breadcrumbs}
>
  <div class="adr-header">
    <div class="adr-number">ADR-{adr.data.number}</div>
    <h1>{adr.data.title}</h1>
    <div class="meta">
      <div class="status-large">
        <StatusBadge status={adr.data.status} />
      </div>
      <time>{adr.data.date.toLocaleDateString()}</time>
    </div>
  </div>

  {deciderPeople.length > 0 && (
    <section class="deciders-section">
      <h2>Decision Makers</h2>
      <div class="deciders-grid">
        {deciderPeople.map((person) => (
          <a href={`/people/${person!.id.replace(/\.md$/, '')}`} class="decider-card">
            <div class="decider-name">{person!.data.name}</div>
            <div class="decider-role">{person!.data.role}</div>
          </a>
        ))}
      </div>
    </section>
  )}

  {adr.data.tags.length > 0 && (
    <section class="tags-section">
      <h2>Tags</h2>
      <ul class="tag-list">
        {adr.data.tags.map((tag) => (
          <li class="tag-pill">{tag}</li>
        ))}
      </ul>
    </section>
  )}

  <article class="adr-content" data-pagefind-body>
    <Content />
  </article>

  <Fragment slot="sidebar">
    <div class="sidebar-section">
      <h3>Details</h3>
      <dl>
        <dt>Number</dt>
        <dd>ADR-{adr.data.number}</dd>
        <dt>Status</dt>
        <dd><StatusBadge status={adr.data.status} /></dd>
        <dt>Date</dt>
        <dd>{adr.data.date.toLocaleDateString()}</dd>
        {adr.data.deciders.length > 0 && (
          <>
            <dt>Deciders</dt>
            <dd>
              {adr.data.deciders.map((decider, i) => {
                const deciderPerson = people.find((p) => p.data.name === decider || p.id.replace(/\.md$/, '') === decider);
                return (
                  <>
                    {i > 0 && ', '}
                    {deciderPerson
                      ? <a href={`/people/${deciderPerson.id.replace(/\.md$/, '')}`}>{decider}</a>
                      : decider
                    }
                  </>
                );
              })}
            </dd>
          </>
        )}
        {adr.data.tags.length > 0 && (
          <>
            <dt>Tags</dt>
            <dd>{adr.data.tags.join(', ')}</dd>
          </>
        )}
      </dl>
    </div>
  </Fragment>
</ContentLayout>

<style>
  .adr-header {
    margin-bottom: var(--space-8);
    padding: var(--space-6);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .adr-number {
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-link);
    margin-bottom: var(--space-2);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .adr-header h1 {
    margin: 0 0 var(--space-4);
    font-size: var(--text-2xl);
  }

  .meta {
    display: flex;
    gap: var(--space-4);
    align-items: center;
  }

  .status-large {
    transform: scale(1.3);
    transform-origin: left;
  }

  .meta time {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .deciders-section,
  .tags-section {
    margin: var(--space-8) 0;
  }

  .deciders-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-3);
    margin-top: var(--space-4);
  }

  .decider-card {
    display: block;
    padding: var(--space-4);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .decider-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-link);
  }

  .decider-name {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .decider-role {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .tag-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag-pill {
    font-size: var(--text-xs);
    padding: 0.3em 0.7em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: var(--space-4);
    font-size: var(--text-base);
  }

  dl {
    margin: 0;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-3);
  }

  dt:first-child {
    margin-top: 0;
  }

  dd {
    margin: var(--space-1) 0 0 0;
  }
</style>
