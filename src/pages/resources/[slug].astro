---
import ContentLayout from '../../layouts/ContentLayout.astro';
import StatusBadge from '../../components/StatusBadge.astro';
import { getCollection } from 'astro:content';

const { slug} = Astro.params;

const resources = await getCollection('resources');
const resource = resources.find((r) => r.id.replace(/\.md$/, '') === slug);

if (!resource) {
  return Astro.redirect('/404');
}

const { Content } = await resource.render();

// Get owner from people collection
const people = await getCollection('people');
const owner = resource.data.owner
  ? people.find((p) => p.data.name === resource.data.owner || p.id.replace(/\.md$/, '') === resource.data.owner)
  : undefined;

const categoryLabel = resource.data.category.charAt(0).toUpperCase() + resource.data.category.slice(1);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Resources', href: '/resources' },
  { label: resource.data.name },
];
---

<ContentLayout
  title={`${resource.data.name} â€” CustDev Wiki`}
  breadcrumbs={breadcrumbs}
>
  <div class="resource-header">
    <h1>{resource.data.name}</h1>
    <div class="meta">
      <StatusBadge status={resource.data.status} />
      <span class="category">{categoryLabel}</span>
    </div>
  </div>

  {resource.data.url && (
    <section class="url-section">
      <h2>URL</h2>
      <a href={resource.data.url} target="_blank" rel="noopener noreferrer">
        {resource.data.url}
      </a>
    </section>
  )}

  {resource.data.owner && (
    <section class="owner-section">
      <h2>Resource Owner</h2>
      <div class="owner-card">
        {owner
          ? <a href={`/people/${owner.id.replace(/\.md$/, '')}`} class="owner-link">
              <div class="owner-name">{resource.data.owner}</div>
              <div class="owner-role">{owner.data.role}</div>
            </a>
          : <div class="owner-name">{resource.data.owner}</div>
        }
      </div>
    </section>
  )}

  {resource.data.used_by.length > 0 && (
    <section class="used-by-section">
      <h2>Used By</h2>
      <ul class="tag-list">
        {resource.data.used_by.map((team) => (
          <li class="tag-pill">{team}</li>
        ))}
      </ul>
    </section>
  )}

  <article class="resource-content" data-pagefind-body>
    <Content />
  </article>

  <Fragment slot="sidebar">
    <div class="sidebar-section">
      <h3>Details</h3>
      <dl>
        <dt>Category</dt>
        <dd>{categoryLabel}</dd>
        <dt>Status</dt>
        <dd><StatusBadge status={resource.data.status} /></dd>
        {resource.data.owner && (
          <>
            <dt>Owner</dt>
            <dd>
              {owner
                ? <a href={`/people/${owner.id.replace(/\.md$/, '')}`}>{resource.data.owner}</a>
                : resource.data.owner
              }
            </dd>
          </>
        )}
        {resource.data.url && (
          <>
            <dt>URL</dt>
            <dd>
              <a href={resource.data.url} target="_blank" rel="noopener noreferrer">
                {resource.data.url}
              </a>
            </dd>
          </>
        )}
        {resource.data.used_by.length > 0 && (
          <>
            <dt>Used By</dt>
            <dd>{resource.data.used_by.join(', ')}</dd>
          </>
        )}
      </dl>
    </div>
  </Fragment>
</ContentLayout>

<style>
  .resource-header {
    margin-bottom: var(--space-8);
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .resource-header h1 {
    margin: 0 0 var(--space-2);
  }

  .meta {
    display: flex;
    gap: var(--space-2);
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .category {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
  }

  .url-section,
  .owner-section,
  .used-by-section {
    margin: var(--space-6) 0;
  }

  .owner-card {
    margin-top: var(--space-3);
  }

  .owner-link {
    display: block;
    padding: var(--space-4);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
    max-width: 300px;
  }

  .owner-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-link);
  }

  .owner-name {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .owner-role {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .tag-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag-pill {
    font-size: var(--text-sm);
    padding: 0.3em 0.7em;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .sidebar-section h3 {
    margin-top: 0;
    margin-bottom: var(--space-4);
    font-size: var(--text-base);
  }

  dl {
    margin: 0;
  }

  dt {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-3);
  }

  dt:first-child {
    margin-top: 0;
  }

  dd {
    margin: var(--space-1) 0 0 0;
  }
</style>
