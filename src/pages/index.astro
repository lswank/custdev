---
import BaseLayout from '../layouts/BaseLayout.astro';
import PhaseIndicator from '../components/PhaseIndicator.astro';
import { getCollection } from 'astro:content';
import { getSiteConfig } from '../lib/config.js';

const config = getSiteConfig();
const terms = await getCollection('terms');
const products = await getCollection('products');
const phases = config.custdev.phases;

// Count terms per phase
const phaseCounts = phases.map((phase) => ({
  ...phase,
  count: terms.filter((t) => t.data.custdev_phase === phase.slug).length,
}));
---

<BaseLayout title={`${config.wiki.title} â€” ${config.company.name}`}>
  <div class="hero">
    <h1>{config.wiki.title}</h1>
    <p class="tagline">{config.company.tagline}</p>
  </div>

  <section class="phases">
    <h2>Customer Development Phases</h2>
    <div class="phase-grid">
      {phaseCounts.map((phase) => (
        <a href={`/framework/${phase.slug}`} class="phase-card" style={`--phase-color: ${phase.color}`}>
          <h3>{phase.label}</h3>
          <p class="count">{phase.count} term{phase.count !== 1 ? 's' : ''}</p>
        </a>
      ))}
    </div>
  </section>

  <section class="quick-links">
    <div class="link-section">
      <h2>Recent Terms</h2>
      <ul>
        {terms.slice(0, 5).map((term) => (
          <li>
            <a href={`/terms/${term.id}`}>{term.data.name}</a>
            <PhaseIndicator phase={term.data.custdev_phase} size="small" />
          </li>
        ))}
      </ul>
      <a href="/terms" class="view-all">View all terms &rarr;</a>
    </div>

    <div class="link-section">
      <h2>Products</h2>
      <ul>
        {products.map((product) => (
          <li>
            <a href={`/products/${product.id}`}>{product.data.name}</a>
            <span class="status">{product.data.status}</span>
          </li>
        ))}
      </ul>
      <a href="/products" class="view-all">View all products &rarr;</a>
    </div>
  </section>

  <section class="engineering-section">
    <h2>Engineering</h2>
    <div class="eng-grid">
      <a href="/people" class="eng-card">
        <h3>Team</h3>
        <p>Team profiles, skills, and roles</p>
      </a>
      <a href="/entities" class="eng-card">
        <h3>Entities</h3>
        <p>Subsidiaries, partners, and holding structure</p>
      </a>
      <a href="/repositories" class="eng-card">
        <h3>Repositories</h3>
        <p>Codebase documentation and ownership</p>
      </a>
      <a href="/adrs" class="eng-card">
        <h3>ADRs</h3>
        <p>Architecture Decision Records</p>
      </a>
      <a href="/resources" class="eng-card">
        <h3>Resources</h3>
        <p>Tools, services, and platforms</p>
      </a>
      <a href="/processes" class="eng-card">
        <h3>Processes</h3>
        <p>Documented procedures and workflows</p>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 2rem;
  }

  .hero h1 {
    margin: 0 0 0.5rem;
    font-size: 2.5rem;
  }

  .tagline {
    color: var(--color-text-muted);
    font-size: 1.2rem;
    margin: 0;
  }

  .phases h2 {
    margin-bottom: 1rem;
  }

  .phase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .phase-card {
    display: block;
    padding: 1.5rem;
    border: 2px solid var(--phase-color);
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text);
    transition: background-color 0.2s;
  }

  .phase-card:hover {
    background-color: color-mix(in srgb, var(--phase-color) 8%, transparent);
    text-decoration: none;
  }

  .phase-card h3 {
    margin: 0 0 0.5rem;
    color: var(--phase-color);
  }

  .phase-card .count {
    margin: 0;
    color: var(--color-text-muted);
  }

  .quick-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .link-section ul {
    list-style: none;
    padding: 0;
  }

  .link-section li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .link-section .status {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: capitalize;
  }

  .view-all {
    display: inline-block;
    margin-top: 1rem;
    font-weight: 600;
  }

  /* Engineering section */
  .engineering-section {
    margin-top: 3rem;
  }

  .eng-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
  }

  .eng-card {
    display: block;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.15s;
  }

  .eng-card:hover {
    border-color: var(--color-link);
    text-decoration: none;
  }

  .eng-card h3 {
    margin: 0 0 0.5rem;
    font-size: 1rem;
    color: var(--color-link);
  }

  .eng-card p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .quick-links {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .hero h1 {
      font-size: 2rem;
    }

    .phase-grid {
      grid-template-columns: 1fr;
    }

    .eng-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
